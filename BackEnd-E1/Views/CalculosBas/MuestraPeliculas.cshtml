@model List<BackEnd_E1.Models.Pelicula>

@{
    ViewBag.Title = "MuestraPeliculas";
}

<h2>MuestraPeliculas</h2>

<table class="table table-striped">
    <thead>
    <th>Titulo</th>
    <th>Duración</th>
    <th>País</th>
    <th>Lanzamiento</th>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        { 
        <tr>
            <td>@item.Titulo</td>
            <td>@item.Duracion</td>
            <td>@item.Pais</td>
            <td>@item.Publicacion.ToString("dd/MM/yyyy")</td>
        </tr>
        }
    </tbody>
</table>